apiVersion: apps/v1
kind: Deployment
metadata:
  name: mekanix-deployment
  labels:
    app: backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      imagePullSecrets:
      - name: regcred
      containers:
      - name: backend
        image: "{{ registry }}/backend:{{ commit_sha }}"
        env:
        - name: MIX_ENV
          value: {{ mix_env }}
        - name: MONGO_DATABASE
          value: {{ mongo_db }}
        - name: MONGO_URL
          value: {{ mongo_url }}
        ports:
        - containerPort: 4000
          protocol: TCP
        livenessProbe:
          httpGet:
            path: /api/healthcheck
            port: 4000
          initialDelaySeconds: 10
          timeoutSeconds: 3
        readinessProbe:
          httpGet:
            path: /api/healthcheck
            port: 4000
          initialDelaySeconds: 30
          timeoutSeconds: 3
